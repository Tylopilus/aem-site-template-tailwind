{
  "name": "aem-site-template-tailwind-theme",
  "version": "0.0.1",
  "description": "AEM Site Theme Tailwind",
  "license": "MIT License, Copyright 2020 Adobe Systems Incorporated",
  "scripts": {
    "build": "cross-env NODE_ENV=production run-s build:*",
    "build:clean": "rimraf dist",
    "build:js": "parcel build src/theme.ts",
    "watch": "run-s watch:*",
    "watch:clean": "rimraf dist",
    "watch:js": "parcel watch src/theme.ts",
    "proxy": "aem-site-theme-builder live",
    "live": "run-p watch proxy"
  },
  "devDependencies": {
    "@adobe/aem-site-theme-builder": "5.2.1",
    "@parcel/transformer-sass": "^2.0.1",
    "autoprefixer": "^10.4.0",
    "browser-sync": "^2.26.13",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.12",
    "install": "^0.13.0",
    "normalize.css": "^8.0.1",
    "npm": "^8.1.4",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.1",
    "parcel-namer-rewrite": "^2.0.0-rc.1",
    "postcss": "^8.4.4",
    "postcss-custom-properties": "^12.0.0",
    "postcss-import": "^14.0.2",
    "postcss-url": "^10.1.3",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.5.2"
  },
  "parcel-namer-rewrite": {
    "chain": "@parcel/namer-default",
    "rules": {
      "(.*?)(\\.[a-f0-9]{8})?\\.(ttf|woff2?)": "resources/fonts/$1.$3",
      "(.*?)(\\.[a-f0-9]{8})?\\.(svg|png|gif|jpg|jpeg|webp)": "resources/images/$1.$3",
      "(.*?)(\\.[a-f0-9]{8})?\\.(tsx|js|ts)": "$1.$3",
      "(.*?)(\\.[a-f0-9]{8})?\\.(css|scss|less)": "$1.$3"
    }
  }
}
